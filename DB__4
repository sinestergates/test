def db(request):
    con = connect_db()
    cur = con.cursor(request)
    cur.execute()
#объединение
db('SELECT "Код", "Название" FROM "Заказчики" UNION ALL SELECT "Код", "Название" FROM "Города"')
#объединение по таблице Заказчики
db('SELECT Заказчики.Код as Заказчики.Код, Заказчики.Название as Заказчики.Название, Заказчики.Код города as Заказчики.Код Города,Города.код as Города.код, Города.Название as Города.Названи FROM Заказчики LEFT JOIN Города ON Города.код=Заказчики.Код города')

#объединение по таблице Города
db('SELECT Города.Код as Города.Код, Города.Название as Города.Название, Заказчики.Код  as Заказчики.Код ,Заказчики.Название as Заказчики.Название, Заказчики.Код города as Заказчики.Код города FROM Города RIGHT JOIN Заказчики ON Заказчики.код=Города.Код')
